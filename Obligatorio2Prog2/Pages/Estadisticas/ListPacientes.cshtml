@page
@model Obligatorio2Prog2.Pages.Estadisticas.ListPacientesModel
@{
    ViewData["Title"] = "Listado de Pacientes";
}
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="m-0">Lista de Pacientes</h2>
            <!-- Barra de busqueda -->
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" name="buscar" placeholder="CI, Nombre o Apellido" value="@Model.Buscar" />
                <button class="btn btn-outline-success" type="submit">Buscar</button>
            </form>
            <!-- Select para ordenar el listado. -->
            <form method="post" asp-page-handler="Ordenar">
                <select name="categoria" onchange="this.form.submit()">
                    <option value="">Ordenar por...</option>
                    <option value="NombreP">Ordenar por nombre (a-z)</option>
                    <option value="NombrePDesc">Ordenar por nombre (z-a)</option>
                    <option value="ApellidoP">Ordenar por apellido (a-z)</option>
                    <option value="ApellidoPDesc">Ordenar por apellido (z-a)</option>
                </select>
            </form>

        </div>
    </div>

    <!-- Tabla de Pacientes -->
    <div class="card-body px-0 pb-0">
        @if (Model.Pacientes.Count() > 0)
        {
        <table class="table table-striped border mb-0">
            <tr class="table-secondary">
                <th>
                    ID
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    CI
                </th>
                <th>
                    Fecha de nacimiento
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Email
                </th>
                <th>
                    Obra social
                </th>
            </tr>
            @foreach (var item in Model.Pacientes)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.PacienteId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.NombreP)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ApellidoP)
                </td>
                <td>
                    @Html.DisplayFor(m => item.NumDocumentoP)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FechaNacP)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TelefonoP)
                </td>
                <td>
                    @Html.DisplayFor(m => item.EmailP)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ObraSocialP)
                </td>
            </tr>
                }
        </table>
        }
        else
        {
        <p>No hay pacientes registrados</p>
        }
    </div>
</div>