@page
@model Obligatorio2Prog2.Pages.GestionTurnos.DisponibilidadModel
@{
    ViewData["Title"] = "Disponibilidad";
}
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="m-0">Lista de Medicos</h2>
            <div class="d-flex align-items-center">

                <!-- Buscar -->
                <form class="d-flex" method="get" role="search">
                    <input class="form-control me-2" type="search" name="buscar"
                           placeholder="Matricula o Nombre"
                           value="@Model.Buscar" />

                    <button class="btn btn-outline-success me-2" type="submit">
                        Buscar
                    </button>
                </form>

                <!-- Borrar -->
                @if (string.IsNullOrWhiteSpace(Model.Buscar))
                {
                <button class="btn btn-outline-danger disabled">
                    <i class="bi bi-x-circle"></i>
                </button>
                }
                else
                {
                <form method="post" asp-page-handler="BorrarBusqueda">
                    <button class="btn btn-outline-danger" type="submit">
                        <i class="bi bi-x-circle"></i>
                    </button>
                </form>
                }
            </div>
            <!-- Select para ordenar -->
            <form method="post" asp-page-handler="Ordenar">
                <select name="especialidad" onchange="this.form.submit()">
                    <option value="" selected disabled>Seleccione una opcion...</option>
                    <option value="todos">Mostrar todos</option>
                    @foreach (var esp in Model.Especialidades)
                    {
                    <option value="@esp">@esp</option>
                    }
                </select>
            </form>
        </div>
    </div>

    <!-- Tabla de Medicos -->
    <div class="card-body px-0 pb-0">
        @if (Model.Medicos.Count() > 0)
        {
        <table class="table table-striped border mb-0">
            <tr class="table-secondary">
                <th>
                    Medico
                </th>
                <th>
                    Matricula
                </th>
                <th>
                    Especialidad
                </th>
                <th>
                    Dias de consulta
                </th>
                <th>
                    Horarios
                </th>
            </tr>
            @foreach (var item in Model.Medicos)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.MedicoId). @Html.DisplayFor(m => item.NombreM) @Html.DisplayFor(m => item.ApellidoM)
                </td>
                <td>
                    @Html.DisplayFor(m => item.MatriculaM)
                </td>
                <td>
                    @Html.DisplayFor(m => item.EspecialidadM)
                </td>
                <td>
                    Lunes - Viernes
                </td>
                <td>
                    @{
                            var horas = item.Horas.OrderBy(h => h.HoraTurno).ToList();
                    }

                    @if (horas.Any())
                            {
                    @horas.First().HoraTurno  @: - @horas.Last().HoraTurno
                            }
                            else
                            {
                    <span>Sin horarios</span>
                            }
                </td>
            </tr>
                }
        </table>
        }
        else
        {
        <p>No hay medicos registrados</p>
        }
    </div>
</div>